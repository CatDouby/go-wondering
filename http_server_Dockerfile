FROM scratch

MAINTAINER yhfoo
WORKDIR /

COPY ./http_server /
EXPOSE 8081

ENTRYPOINT ["/http_server"]

# scratch 为空容器，没有 bash cd mkdir 等命令，所以把可执行文件直接放在根目录，或者将事先建立好的目录拷 copy 到容器

